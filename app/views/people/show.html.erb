<%- model_class = Person -%>

<div class="jumbotron">
  <div class="page-header">
    <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card hovercard">
        <div class="cardheader">
        </div>
        <div class="avatar">
          <%= gravatar_tag @person.email, :size => 100 %>
        </div>
        <div class="info">
          <div class="title">
            <a target="_blank" href="#"><%= @person.name %>, <%= @person.blood_group %></a>
          </div>
          <div class="desc"><%= @person.profession %></div>
        </div>
      </div>
    </div>
  </div>
</div>
